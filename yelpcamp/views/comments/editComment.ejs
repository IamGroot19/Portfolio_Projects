<!-- 
    Inputs to this template wll be campID (passed as req.params.id from user), comment object
-->

<%- include('../partials/header.ejs') %>

<div class="container">
    <h1 style="margin-left: 7.5em; margin-block-start: 2em ;"> Edit your comment </h1>
    <br><br>
    <form action="/campgrounds/<%=campID%>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div style=" width:60%; margin: 0 auto;">
            <div class="form-group">
                <label for="ratingValue"> Your Rating </label>
                <input type="number" id="ratingValue" name="ratingValue" step="0.5" min="0" max="5">
            </div>
            <div class="form-group">
                <label for="commentText"> Your Comment </label>
                <input type="text" class="form-control" placeholder="Comment" name="commentText" id="commentText" value="<%= comment.text %>">
            </div>

            <!-- try to introduce a photo here -->
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
            <br> 
            <p style="margin: 0 auto;" class="text-center"> <a href="/campgrounds">Go Back</a> <p>
        </div>
    </form>
    
</div>


<%- include('../partials/footer.ejs') %>
