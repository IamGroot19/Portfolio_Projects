<%- include('./partials/header.ejs') %>

<div class="container">
    <h1 style="margin-left: 7.5em; margin-block-start: 2em ;"> CHANGE YOUR PASSWORD </h1>
    <br><br>
    <form action="/users/<%=user.id%>/password" method="POST">
        <div style=" width:60%; margin: 0 auto;">
            <div class="form-group">
                <label for="oldPassword"> OLD PASSWORD </label>
                <input type="password" id="oldPassword" name="oldPassword" required="true" class="form-control">
            </div>
            
            <div class="form-group">
                <label for="newPassword"> NEW PASSWORD </label>
                <input type="password" id="newPassword" name="newPassword" required="true" class="form-control">
            </div>

            <!-- try to introduce a photo here -->
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
            <br> 
            <p style="margin: 0 auto;" class="text-center"> <a href="/users/<%=user.id%>">Go Back</a> <p>
        </div>
    </form>


<%- include('./partials/footer.ejs') %>