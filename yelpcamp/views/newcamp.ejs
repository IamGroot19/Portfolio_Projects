<div class="container">
    <div class="row">
        <h1> Create a New Campground </h1>
    <form action="/campgrounds" method="POST">
        
            <div style="width:40%; margin: 0 auto;">       
                <div class="form-group">
                    <label for="campName"> Camp Name </label>
                    <input type="text" class="form-control" placeholder="camp's name" id="campName">
                </div>
                <div class="form-group">
                    <label for="campImg"> Camp Image </label>
                    <input type="password" class="form-control" placeholder="Camp Image URL" id="campImg">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </div>
    </form>
</div>

