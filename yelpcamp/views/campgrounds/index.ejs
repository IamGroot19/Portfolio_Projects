<%- include('../partials/header.ejs') %>

    <div class="container">
        <!-- Just the jumbotron part-->
        <header class="jumbotron">
            <div class=="container">
                <h1 class="display-4"> CAMPGROUNDS PAGE </h1>
                <p class="lead"> You can check out all campgrounds here.  </p>
                <p> <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add New Campground </a> </p>
            </div>
        </header>

        <div class="row text-center" style="display: flex; flex-wrap: wrap;">            
            <% camps.forEach( (camp) => { %>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="img-thumbnail image">
                        <img src= "<%= camp.image %> " class="img-fluid">   
                        <div class="caption"> <br> <h4> <%= camp.name %> </h4> </div>                 
                        <p> <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary"> More Info </a> </p>
                    </div>
                </div>
            <% }); %>
        </div>

    </div>
<%- include('../partials/footer.ejs') %>